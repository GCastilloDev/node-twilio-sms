<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write you message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+521234567890" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">Send</button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
            <ul class="list-group" style="height: 70vh; overflow-y: auto;" id="messages">
                {{#each messages}}
                <li class="list-group-item list-group-item-info list-group-item-action">
                    <p>{{Body}}</p>
                    <p>{{_id}}</p>
                    <span>De: {{To}}</span>
                    <span>Para: {{From}}</span>
                    <p>{{timeago createdAt}}</p>
                </li>
            {{/each}}
            </ul>
        {{else}}
            <p>No messages yer</p>
        {{/if}}
    </div>
</div>